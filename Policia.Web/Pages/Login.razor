@page "/login"
@layout EmptyLayout
@using Policia.Web.Models
@inject HttpClient Http
@inject NavigationManager NavManager
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<div class="login-page">

    <!-- Línea dorada superior -->
    <div class="top-gold-line"></div>

    <!-- Marca de agua de fondo -->
    <div class="bg-watermark"></div>

    <!-- Contenido principal -->
    <div class="login-center">
        <div class="login-card">

            <!-- ═══ SECCIÓN VERDE (arriba) ═══ -->
            <div class="card-top">
                <!-- Emblema PNP -->
                <div class="emblem">
                    <div class="emblem-ring">
                        <img src="images/escudo-pnp.png" alt="Escudo PNP" class="emblem-img" />
                    </div>
                </div>
                <h1 class="system-name">SISTEMA DE GESTIÓN POLICIAL</h1>
                <p class="system-org">Policía Nacional del Perú</p>
            </div>

            <!-- Franja dorada -->
            <div class="gold-stripe"></div>

            <!-- ═══ SECCIÓN BLANCA (abajo) ═══ -->
            <div class="card-bottom">
                <h2 class="form-title">Acceso al Sistema</h2>

                <!-- CIP -->
                <div class="field-row">
                    <div class="field-icon-circle">
                        <svg viewBox="0 0 16 16" fill="white" xmlns="http://www.w3.org/2000/svg">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                        </svg>
                    </div>
                    <input @bind="request.Cip" type="text" class="field-input"
                           placeholder="Ingrese su CIP" maxlength="8" />
                </div>

                <!-- Contraseña -->
                <div class="field-row">
                    <div class="field-icon-circle">
                        <svg viewBox="0 0 16 16" fill="white" xmlns="http://www.w3.org/2000/svg">
                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2"/>
                        </svg>
                    </div>
                    <input @bind="request.Password" type="@tipoPassword" class="field-input"
                           placeholder="Contraseña" />
                    <button type="button" class="btn-eye" @onclick="TogglePassword" title="Mostrar/Ocultar">
                        @if (mostrarPassword)
                        {
                            <svg viewBox="0 0 16 16" fill="#999" xmlns="http://www.w3.org/2000/svg">
                                <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7 7 0 0 0-2.79.588l.77.771A6 6 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755q-.247.248-.517.486z"/>
                                <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829"/>
                                <path d="M3.35 5.47q-.27.24-.518.487A13 13 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7 7 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12z"/>
                            </svg>
                        }
                        else
                        {
                            <svg viewBox="0 0 16 16" fill="#999" xmlns="http://www.w3.org/2000/svg">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                            </svg>
                        }
                    </button>
                </div>

                <!-- Botón -->
                <button class="btn-access" @onclick="IniciarSesion" disabled="@cargando">
                    @if (cargando)
                    {
                        <span class="btn-spinner"></span>
                        <span>VERIFICANDO...</span>
                    }
                    else
                    {
                        <span>INGRESAR AL SISTEMA</span>
                    }
                </button>

                <!-- Olvidó contraseña -->
                <a href="#" class="forgot-link">¿Olvidaste tu contraseña?</a>

                <!-- Error -->
                @if (!string.IsNullOrEmpty(mensajeError))
                {
                    <div class="error-box">@mensajeError</div>
                }
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="login-footer">
        <span class="footer-dept">DIRTIC PNP — Dirección de Tecnología de la Información y Comunicaciones</span>
        <span class="footer-copy">© 2026 Todos los derechos reservados</span>
        <span class="footer-version">v1.0</span>
    </footer>
</div>

@code {
    LoginRequest request = new LoginRequest();
    string mensajeError = "";
    bool cargando = false;
    bool mostrarPassword = false;

    string tipoPassword => mostrarPassword ? "text" : "password";

    void TogglePassword() => mostrarPassword = !mostrarPassword;

    async Task IniciarSesion()
    {
        cargando = true;
        mensajeError = "";

        try
        {
            var respuesta = await Http.PostAsJsonAsync("seguridad/login", request);

            if (respuesta.IsSuccessStatusCode)
            {
                var resultado = await respuesta.Content.ReadFromJsonAsync<LoginResponse>();

                await LocalStorage.SetItemAsync("token_policial", resultado.Token);
                await LocalStorage.SetItemAsync("usuario_nombre", resultado.Usuario);
                await LocalStorage.SetItemAsync("id_personal", resultado.IdPersonal);

                NavManager.NavigateTo("/", true);
            }
            else
            {
                mensajeError = "⛔ Credenciales incorrectas o usuario inactivo.";
            }
        }
        catch (Exception ex)
        {
            mensajeError = "❌ Error de conexión con el servidor.";
            Console.WriteLine(ex.Message);
        }
        finally
        {
            cargando = false;
        }
    }
}